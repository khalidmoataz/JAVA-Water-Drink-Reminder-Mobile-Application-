<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home2"

    >

    <TextView
        android:id="@+id/EnterNametitle"
        android:layout_width="300dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Your Gender"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/First_Name_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/malechoice"
        android:layout_width="213dp"
        android:layout_height="57dp"
        android:layout_below="@id/password_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="false"

        android:layout_marginStart="8dp"

        android:layout_marginTop="77dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="448dp"
        android:background="@drawable/buttonlowlightorange"
        android:padding="20dp"
        android:text="Male"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterNametitle" />

    <Button
        android:id="@+id/femalechoice"
        android:layout_width="213dp"
        android:layout_height="57dp"
        android:layout_below="@id/password_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="false"

        android:layout_marginStart="99dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="357dp"
        android:background="@drawable/buttonlowlightorange"
        android:padding="20dp"
        android:text="Female"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/malechoice" />

    <Button
        android:id="@+id/next2"
        android:layout_width="213dp"
        android:layout_height="57dp"
        android:layout_below="@id/femalechoice"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="false"

        android:layout_marginStart="99dp"
        android:layout_marginTop="434dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="357dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/femalechoice" />

</android.support.constraint.ConstraintLayout>